<%

var util = require('../../../../common/js/util.js');
var colors = require('../../../../common/js/colors.js');

_.chain(evidences)
.sortBy(function(evidence) {
	return evidence.title;	
})
.forEach(function(evidence) {

	var category = evidence.category;
	var categoryIndex = _.indexOf(categories, category);
%>

	<li data-category='<%=category%>' style='border-color: <%=colors[categoryIndex]%>'>
		<div class='shaybrawn down'>
		  <svg viewBox="0 0 100 58">
		    <path d="M08,08 L50,51 L92,08">
		      <animate class='to-up'
		               begin='indefinite'
		               fill='freeze'
		               attributeName='d'
		               dur='400ms'
		               calcMode="spline"
		               keyTimes="0;1"
		               keySplines="0.23 1 0.32 1"
		               to='M08,50 L50,7 L92,50'/>
		      <animate class='to-down'
		               begin='indefinite'
		               fill='freeze'
		               attributeName='d'
		               dur='400ms'
		               calcMode="spline"
		               keyTimes="0;1"
		               keySplines="0.23 1 0.32 1"
		               to='M08,08 L50,51 L92,08'/>
		    </path>
		  </svg>
		</div>
		<a class='anchor' name='<%= evidence.key %>_<%= util.evidenceSlug(evidence) %>' />
		<div class='wrapper'>
			<div class='name'><%= evidence.publish === 'Yes' ? "" : "<span class='not-published'>NOT PUBLISHED</span>" %><span><%= util.evidenceTitle(evidence) %></span></div>
			<div class='drawer-spacer'></div>
			<div class='drawer'>
				<div class='drawer-wrapper'>
					<div class='details'>
						<% if (evidence.img.length) { %>
							<div class='media'>
								<img src='<%= evidence.img %>' />
								<% if (evidence.show_curtain && evidence.show_curtain === 'Yes') { %>
									<div class='curtain'>
										<div class='warning'>
											<span>Warning: This image contains graphic content.</span>
										</div>
										<button class='btn'>View image</button>
									</div>
								<% } %>
							</div>
						<% } %>
						<div class='misc'>
							<div class='description'><span><%= util.toSentenceCase(evidence.description) %></span></div>
							<div class='category'><span><%= util.toSentenceCase(evidence.category) %></span></div>
							<div class='date'><span>Day <%= evidence.days.split(',').join(', ') %></span></div>
						</div>
					</div>
					<% if (evidence.witnesses.length) { %>
					<div class='associated'>
						<div class='title'>Associated witnesses</div>
						<ul>
							<% _.forEach(evidence.witnesses.split(','), function(key) {

								var witness = witnesses[key];

								if (witness) { %>

									<li><a href='#<%=key%>_<%= util.witnessSlug(witness) %>'><%= util.witnessTitle(witness) %></a></li>

								<% }
							}) %>
						</ul>
					</div>
					<% } %>
				</div>

			</div>
		</div>
	</li>

<% }) %>